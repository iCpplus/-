/* components/student/home/home.wxss */
.student-home{
  position: relative;
}
.placehoder{
  height: 70rpx;
  background: #838ecb;
}
.search-contain{
  background: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.contain{
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  position: absolute;
  background: #fff;
  top: 30rpx;
  width: 100%;
}
.swiper-contain{
  padding: 20rpx;
  background: #f7f8fa;
  border-radius: 40rpx;
}
.swiper-contain image{
  width: 100%;
  height: 100%;
}
.swiper-contain .swiper{
  border-radius: 20rpx;
}
.card-contain{
  margin-top: 30rpx;
  padding: 20rpx;
  margin-bottom: 100rpx;
}
.card{
  position: relative;
  background: #f7f8fa;
  height: 260rpx;
  width: 100%;
  border-radius: 20rpx;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  margin-top: 15rpx;
}
.shop-cover{
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
  margin-right: 12rpx;
}
.shop-name{
  font-size: large;
}
.shop-info{
  font-size: small;
  color: #7c839a;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.mask{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #c0c0c0;
  opacity: 0.7;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #f55f62;
  font-size: xx-large;
}
.holder2{
  height: 70rpx;
}
.shop-desc{
  font-size: small;
  color: #7c839a;
  margin-bottom: 10rpx;
}
.shop-order-num{
  font-size: small;
  color: #7c839a;
}