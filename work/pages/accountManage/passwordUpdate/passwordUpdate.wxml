<!--pages/accountManage/passwordUpdate/passwordUpdate.wxml-->
<view class="password-update">
  <van-notify id="van-notify" />
  <van-cell-group>
    <van-field model:value="{{ phone }}" placeholder="请输入手机号" border="{{ false }}"  label="手机号" />
    <van-field model:value="{{ oldPassword }}" placeholder="请输入旧密码" border="{{ false }}"  label="密码" />
    <van-field model:value="{{ newPassword }}" placeholder="请输入新密码" border="{{ false }}"  label="新密码" />
  </van-cell-group>
  
  <button class="btn" bindtap="saveInfo">修改密码</button>
</view>
